node("deploy-server") {
    try {
        stage("Stop application") {
            build job: '../Deploy/stop-app', parameters: [
                   [$class: 'StringParameterValue', name: 'DEPLOYMENT_ENV', value: DEPLOYMENT_ENV]]
        }
        stage("Deploy and start application") {
            build job: '../Deploy/deploy-app', parameters: [
                   [$class: 'StringParameterValue', name: 'DEPLOYMENT_ENV', value: DEPLOYMENT_ENV]]
        }
    }
    catch(Exception e) {
        println e
        currentBuild.result = "FAILURE"
    }
}
